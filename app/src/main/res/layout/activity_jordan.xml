<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#A57B59">

    <ImageView
        android:id="@+id/nike_logo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/jordan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nike_logo"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">


        <!-- Box 1 -->
        <RelativeLayout
            android:id="@+id/box1"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/jordan1"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/nike_zoom_freak_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JORDAN WESTBROOK ONE TAKE"
                android:gravity="center"
                android:layout_below="@id/nike_zoom_freak_4"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3600 грн"
                android:textColor="#FF0000"
                android:layout_below="@id/photo1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- Box 2 -->
        <RelativeLayout
            android:id="@+id/box2"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/jordan2"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/nike_kd_trey_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JORDAN MAX AURA"
                android:gravity="center"
                android:layout_below="@id/nike_kd_trey_5"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4990 грн"
                android:textColor="#FF0000"
                android:layout_below="@id/photo2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- Box 3 -->
        <RelativeLayout
            android:id="@+id/box3"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/jordan3"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JORDAN FLIGHT CLUB"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5490 грн"
                android:textColor="#FF0000"
                android:layout_below="@id/photo3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- Box 4 -->
        <RelativeLayout
            android:id="@+id/box4"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/photo4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/jordan4"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JORDAN MAX AURA 4"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:padding="8dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5900 грн"
                android:textColor="#FF0000"
                android:layout_below="@id/photo4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
        </RelativeLayout>

    </GridLayout>
</RelativeLayout>
