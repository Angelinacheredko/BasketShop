<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="#A57B59">

    <TextView
        android:id="@+id/choose_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE A BRAND"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_brand"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/btn_nike"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:background="@drawable/nike"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_jordan"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:background="@drawable/jordan"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_under_armour"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:background="@drawable/under_armour"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_adidas"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:background="@drawable/adidas"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:layout_weight="1"/>
    </GridLayout>
</RelativeLayout>
